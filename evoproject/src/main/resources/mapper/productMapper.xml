<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.evo.evoproject.repository.product.ProductRepository">

<resultMap id="ProductResultMap" type="com.evo.evoproject.domain.product.Product">
    <id property="productNo" column="pro_no" />
    <result property="productName" column="pro_name" />
    <result property="productDes" column="pro_content" />
    <result property="imageId" column="image_id" />
    <result property="categoryId" column="category_id" />
    <result property="price" column="pro_price" />
    <result property="stock" column="pro_stock" />
    <result property="date" column="pro_date" />
    <result property="viewCount" column="view_count" />
</resultMap>

    <select id="findAllProducts" resultMap="ProductResultMap">
        SELECT * FROM product
            <choose>
                <when test="sort == 'price_asc'">
                    ORDER BY pro_price ASC
                </when>
                <when test="sort == 'price_desc'">
                    ORDER BY pro_price DESC
                </when>
                <when test="sort == 'viewCount_desc'">
                    ORDER BY view_count DESC
                </when>
                <otherwise>
                    ORDER BY pro_date DESC
                </otherwise>
            </choose>
            LIMIT #{offset}, #{size}
    </select>

    <select id="findProductsByCategory" resultMap="ProductResultMap">
        SELECT * FROM product WHERE category_id = #{categoryId}
        <choose>
            <when test="sort == 'price_asc'">
                ORDER BY pro_price ASC
            </when>
            <when test="sort == 'price_desc'">
                ORDER BY pro_price DESC
            </when>
            <when test="sort == 'viewCount_desc'">
                ORDER BY view_count DESC
            </when>
            <otherwise>
                ORDER BY pro_date DESC
            </otherwise>
        </choose>
        LIMIT #{offset}, #{size}
    </select>
    <!--다른 SQL 도 동적쿼리를 활용해보자-->
    <select id="findProductByNo" resultMap="ProductResultMap">
        SELECT * FROM product WHERE pro_no = #{productNo}
    </select>

    <select id="countAllProducts" resultType="int">
        SELECT COUNT(*) FROM product
    </select>

    <select id="countProductsByCategory" parameterType="int" resultType="int">
        SELECT COUNT(*) FROM product WHERE category_id = #{categoryId}
    </select>

    <update id="incrementProductViewCount">
        UPDATE product SET view_count = view_count + #{count} WHERE pro_no = #{productNo}
    </update>

</mapper>



